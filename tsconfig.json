{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "files": [
        "eslint.config.ts",
        "configs/index.ts",
        "configs/types.ts"
    ]
}
