{
    "name": "@nix24/eslint-config",
    "version": "1.0.0",
    "description": "Modern ESLint config for TypeScript projects with optional support for React and Vue. Powered by Stylistic, built for ESLint v9+.",
    "main": "dist/index.js",
    "scripts": {
        "build": "esbuild configs/index.ts --outdir=dist --minify && copyfiles -f configs/*.d.ts dist"
    },
    "keywords": [
        "eslint",
        "eslint-config",
        "eslint-flat-config",
        "flat-config",
        "typescript",
        "eslint-plugin",
        "stylistic",
        "react",
        "vue",
        "ts",
        "eslint-v9",
        "eslint-style",
        "no-prettier",
        "code-style",
        "linting",
        "@stylistic",
        "modern-eslint",
        "nix24"
    ],
    "author": "Nix24 <nix24@foxmail.com>",
    "license": "MIT",
    "packageManager": "pnpm@10.13.1",
    "dependencies": {
        "@eslint/compat": "^1.3.1",
        "@eslint/js": "^9.32.0",
        "@stylistic/eslint-plugin": "^5.2.2",
        "eslint": "^9.32.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
        "globals": "^16.3.0",
        "typescript-eslint": "^8.39.0"
    },
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "esbuild": "^0.25.8",
        "jiti": "^2.5.1"
    },
    "files": [
        "dist",
        "package.json",
        "pnpm-lock.yaml",
        "pnpm-workspace.yaml",
        "README.md"
    ],
    "publishConfig": {
        "access": "public"
    }
}